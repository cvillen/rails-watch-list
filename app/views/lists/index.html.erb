<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0)), url(https://res.cloudinary.com/cvillen/image/upload/v1623600454/banner_ygjon1.jpg);">
  <div class="container">
    <h1>Movie lists</h1>
  </div>
</div>


<div class="cards-category">
  <% @lists.each do |list| %>
    <div class="card-white">
      <%= link_to list.name, list_path(list) %>
      <% if list.photo.attached? %>
        <%= image_tag list.photo, alt:"list image", class:"list-image", height:"110px", width:"250px" %>
      <% else %>
        <%= image_tag "https://source.unsplash.com/random", alt:"list image", class:"list-image", height:"110px", width:"250px" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="btn btn-success m-4"> <%= link_to 'Add new list', new_list_path %> </div>

