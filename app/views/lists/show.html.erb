<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSbqxAVcN8-K4CwshlwRzNvTCLb8rzYerpKKw&usqp=CAU)">
  <h1><%= @list.name %></h1>
</div>

<div class="card-movie m-4">
  <% @bookmarks.each do |bookmark| %>
  <div class="cards">
    <%= image_tag bookmark.movie.poster_url %>
    <div class="card-movie-info">
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.rating %> <i class="fas fa-star star-yellow"></i></p>
      <p><%= bookmark.movie.overview %></p>
      <p> <i class="fas fa-quote-left"></i> <%= bookmark.comment %> </p>

      <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: {confirm: 'Are you sure?'}%>
    </div>
  </div>
  <% end %>
</div>

<div>
  <p class="btn btn-success"><%= link_to 'Add bookmark', new_list_bookmark_path(@list.id) %></p>
  <p class="btn btn-danger"><%= link_to 'Delete list', list_path(@list), method: :delete, data: {confirm: 'Are you sure?'} %></p>
  <p class="btn btn-primary"><%= link_to 'Back', lists_path %></p>
</div>
